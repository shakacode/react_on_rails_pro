#!/usr/bin/env bash

# If it's storybook, run that or else run rails.
if [ -n "$STORYBOOK_APP" ]; then
  # bin/boot is added by the Heroku heroku-buildpack-static buildpack
  # https://elements.heroku.com/buildpacks/heroku/heroku-buildpack-static
  # Used for staticly hosting storybook in prod https://storybook.popmenubeta.com
  bin/boot
else
  NODE_ENV=production RAILS_ENV=production RENDERER_URL=http://localhost:3800 bundle exec puma -p $PORT -e $RACK_ENV -C config/puma.rb
fi
